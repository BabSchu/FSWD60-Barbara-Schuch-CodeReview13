{% extends 'base.html.twig' %}

{% block body %}
    <h1>Events list</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Eventname</th>
                <th>Eventdatetime</th>
                <th>Eventdescription</th>
                <th>Eventimage</th>
                <th>Eventcapacity</th>
                <th>Eventcontact</th>
                <th>Eventlocationname</th>
                <th>Eventlocationaddress</th>
                <th>Eventlocationzipcity</th>
                <th>Eventurl</th>
                <th>Eventtype</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('events_show', { 'id': event.id }) }}">{{ event.eventName }}</a></td>
                <td>{% if event.eventDatetime %}{{ event.eventDatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ event.eventDescription }}</td>
                <td>{{ event.eventImage }}</td>
                <td>{{ event.eventCapacity }}</td>
                <td>{{ event.eventContact }}</td>
                <td>{{ event.eventlocationName }}</td>
                <td>{{ event.eventlocationAddress }}</td>
                <td>{{ event.eventlocationZipCity }}</td>
                <td>{{ event.eventUrl }}</td>
                <td>{{ event.eventType }}</td>
                <td>{{ event.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('events_show', { 'id': event.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('events_edit', { 'id': event.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('events_new') }}">Create a new event</a>
        </li>
    </ul>
{% endblock %}
